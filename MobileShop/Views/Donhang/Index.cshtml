@model IEnumerable<MobileShop.Models.Donhang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách đơn hàng</h2>
<table class="table">
    <tr>
        <th>
            Người đặt
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Tình trạng đơn hàng
        </th>
        <th>
            Người nhận
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.MaNguoidungNavigation.Hoten
    </td>
    <td>
        @item.Ngaydat
    </td>
    @switch (item.Tinhtrang)
    {
        case 1:
            <td>Hoàn thành</td>
            break;
        case 2:
            <td>Đã hủy</td>
            break;
        default:
            <td>Đang xử lý</td>
            break;
    }
    <td>
        @item.Nguoinhan
    </td>
    <td>
        @item.Sdt
    </td>
    <td>
        @item.Diachi
    </td>
    <td>
        <button class="btn-primary">
            @Html.ActionLink("Chi tiết", "Details", new { id = item.Madon }, new { @style = "color:white;" })
        </button>

    </td>
</tr>
    }

</table>