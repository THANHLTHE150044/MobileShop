@model X.PagedList.IPagedList<MobileShop.Models.Nguoidung>
@using X.PagedList.Mvc.Core;
@{
    ViewBag.Title = "NguoidungIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 class="mt-2" style="text-align:center">Quản lý người dùng</h2>
<table class="table table-bordered mt-3">
    <tr class="thead-light">
        <th>Họ Tên</th>
        <th>Email</th>
        <th>Điện thoại</th>
        <th>Địa chỉ </th>
        <th>Tên quyền </th>
        <th>Hành động</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Hoten</td>
            <td>@item.Email</td>
            <td>@item.Dienthoai</td>
            <td>@item.Diachi</td>
            <td>@item.IdquyenNavigation.TenQuyen</td>
            <td><a href="/Admin/EditNguoidung/@item.MaNguoiDung">Sửa</a></td>
        </tr>
    }
</table>
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))


